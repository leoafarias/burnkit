{
  "name": "firekit",
  "version": "0.1.0",
  "description": "A decorator-based TypeScript SDK for Firebase",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest --config jest.config.js",
    "lint": "eslint src/**/*.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "test-firebase": "node tests/firebase/test-firebase-connection.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/firekit.git"
  },
  "keywords": [
    "firebase",
    "firestore",
    "typescript",
    "decorators",
    "orm"
  ],
  "author": "Leo Farias",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/firekit/issues"
  },
  "homepage": "https://github.com/yourusername/firekit#readme",
  "dependencies": {
    "reflect-metadata": "^0.1.13"
  },
  "peerDependencies": {
    "firebase-admin": "^11.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "firebase-admin": "^11.5.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0",
    "typescript": "~4.9.5"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
